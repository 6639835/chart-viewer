{
  "name": "chart-viewer",
  "version": "1.6.1",
  "private": true,
  "main": "electron/main.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "description": "Aviation chart viewer application for viewing PDF approach charts",
  "author": {
    "name": "Justin",
    "email": "epa6643@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/6639835/chart-viewer.git"
  },
  "homepage": "https://github.com/6639835/chart-viewer#readme",
  "bugs": {
    "url": "https://github.com/6639835/chart-viewer/issues"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "electron": "electron .",
    "electron:dev": "node electron-dev.js",
    "electron:build": "next build && electron-builder",
    "electron:build:mac": "next build && electron-builder --mac",
    "electron:build:win": "next build && electron-builder --win",
    "electron:build:linux": "next build && electron-builder --linux",
    "generate-icons": "node scripts/generate-icons.js",
    "release": "bash scripts/release.sh"
  },
  "build": {
    "appId": "com.chartviewer.efb",
    "productName": "Chart Viewer",
    "publish": {
      "provider": "github",
      "owner": "6639835",
      "repo": "chart-viewer"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "package.json",
      "next.config.js"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icon.icns",
      "artifactName": "Chart.Viewer-${version}-${arch}.${ext}",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "sign": false
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico",
      "artifactName": "Chart.Viewer-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png",
      "category": "Utility",
      "artifactName": "Chart.Viewer-${version}-${arch}.${ext}"
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "iconv-lite": "^0.7.0",
    "lucide-react": "^0.555.0",
    "next": "^16.0.5",
    "next-themes": "^0.4.6",
    "papaparse": "^5.4.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-pdf": "^10.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@next/eslint-plugin-next": "^16.0.5",
    "@types/node": "^22.15.0",
    "@types/papaparse": "^5.5.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.28.0",
    "eslint-config-next": "^16.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.0",
    "prettier": "^3.6.2",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.48.0",
    "wait-on": "^9.0.3"
  }
}
